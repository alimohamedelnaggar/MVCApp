@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Id" class="col-form-label"></label>
        <input readonly asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName" class="col-form-label"></label>
        <input readonly asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>



    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Role" asp-action="Index" class="btn btn-light">Back To List</a>

</form>