@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Roles</h1>
<br />
<br />
<form asp-action="Index">
    <div class="row m-5">

        <div class="col-8">
            <input type="search" class="form-control" name="search" id="search" />
        </div>
        <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
        </div>
    </div>
</form>

<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create Role</a>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-responsive-sm table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Id)</th>
                <th>@Html.DisplayNameFor(E => E.RoleName)</th>
                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>

                    <td>@user.Id</td>
                    <td>@user.RoleName</td>
                    

                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success ">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-danger"><h4>There is No Roles :(</h4></div>
}

