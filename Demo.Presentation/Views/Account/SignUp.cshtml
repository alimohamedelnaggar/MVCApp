 @model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignUp" method="post">
            <div asp-validation-summary="All"></div>
            <input asp-for="UserName" placeholder="Username" required=""><br />
            <input asp-for="FirstName" placeholder="FirstName" required=""><br />
            <input asp-for="LastName" placeholder="LastName" required=""><br />
            <input asp-for="Email" placeholder="Email" required=""><br />
            <input asp-for="Password" placeholder="Password" required=""><br />
            <input asp-for="ConfirmPassword" placeholder="Confirm Password" required=""><br />
            
            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
<p>Don't have an Account? <a asp-controller="Account" asp-action="SignIn"> Login Now!</a></p>
    </div>
</div>