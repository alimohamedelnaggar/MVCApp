@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignIn" method="post">
            <div asp-validation-summary="All"></div>
            
            <input asp-for="Email" placeholder="Email" required=""><br />
            <input asp-for="Password" placeholder="Password" required=""><br />
           

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox" required="">
                    <span>Remember Me</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGN IN">
        </form>
        <p>Create New Account ? <a asp-controller="Account" asp-action="SignUp"> Sign Up</a></p><br />
        <p> <a asp-controller="Account" asp-action="ForgetPassword">Forget Password ?</a></p>
    </div>
</div>

