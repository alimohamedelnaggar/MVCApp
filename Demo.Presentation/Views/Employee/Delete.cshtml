@model EmpViewModel

@inject IDepartmentRepository _departmentRepository
@{
    var department = new SelectList(await _departmentRepository.GetAll(), "Id", "Name");
}
<h1>Delete</h1>

<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input readonly asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input readonly asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input readonly asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input readonly asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input readonly asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="col-form-label"></label>
        <input readonly asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <input disabled asp-for="IsActive" class="form-check" />
        <label asp-for="IsActive" class="form-check"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input disabled asp-for="IsDeleted" class="form-check" />
        <label asp-for="IsDeleted" class="form-check"></label>
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label asp-for="HireDate" class="col-form-label"></label>
        <input readonly asp-for="HireDate" class="form-control" />

    </div> 
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input readonly asp-for="DateOfCreation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Department" class="col-form-label"></label>
        <select disabled asp-for="DepartmentId" asp-items="@department" class="form-control">
            <option value="@null">-- Select Department --</option>
        </select>
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>

</form>
    